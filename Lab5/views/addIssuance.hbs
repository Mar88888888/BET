<h1>Issue an Item</h1>
<form action="/issuances" method="POST">
  <label>Employee:
    <select name="employee_id" required>
      {{#each employees}}
      <option value="{{this._id}}">{{this.first_name}} {{this.last_name}}</option>
      {{/each}}
    </select>
  </label><br>

  <label>Item:
    <select name="item_id" required>
      {{#each items}}
      <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </label><br>

  <label>Issue Date: <input type="date" name="issue_date" required></label><br>
  <button type="submit">Issue Item</button>
</form>