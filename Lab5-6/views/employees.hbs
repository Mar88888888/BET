<h1>Employees</h1>
<a href="/add-employee">Add New Employee</a>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Room Number</th>
    <th>Actions</th>
  </tr>
  {{#each employees}}
  <tr>
    <td>{{this.first_name}}</td>
    <td>{{this.last_name}}</td>
    <td>{{this.room_number}}</td>
    <td>
      <form action="/employees/{{this._id}}?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure?');">
        <a class="edit-btn" href="/edit-employee/{{this._id}}">Edit</a>
        <button type="submit" class="delete-btn">Delete</button>
      </form>
    </td>
  </tr>
  {{/each}}
</table>