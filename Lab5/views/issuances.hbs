<h1>Issuances</h1>
<a href="/add-issuance">Issue New Item</a>
<table>
  <tr>
    <th>Employee</th>
    <th>Item</th>
    <th>Issue Date</th>
    <th>Actions</th>
  </tr>
  {{#each issuances}}
  <tr>
    <td>{{this.employee_id.first_name}} {{this.employee_id.last_name}}</td>
    <td>{{this.item_id.name}}</td>
    <td>{{formatDate this.issue_date}}</td>
    <td>
      <form action="/issuances/{{this._id}}?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure?');">
        <a class="edit-btn" href="/edit-issuance/{{this._id}}">Edit</a>
        <button type="submit" class="delete-btn">Delete</button>
      </form>
    </td>
  </tr>
  {{/each}}
</table>